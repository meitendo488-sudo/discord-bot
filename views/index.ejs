<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lost Spirit Stats</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      width: 100%;
      height: 100%;
      overflow: hidden;
      font-family: 'Poppins', sans-serif;
      color: white;
      text-align: center;
      background: black;
    }

    /* Background fading container */
    #background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      transition: opacity 2s ease-in-out;
      z-index: -2;
      opacity: 1;
    }

    #overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      z-index: -1;
    }

    .content {
      position: relative;
      z-index: 1;
      top: 50%;
      transform: translateY(-50%);
      text-align: center;
      animation: fadeIn 2s ease-in-out;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-60%); }
      to { opacity: 1; transform: translateY(-50%); }
    }

    h1 {
      font-size: 3rem;
      letter-spacing: 2px;
      margin-bottom: 10px;
    }

    p {
      font-size: 1.2rem;
      color: #ccc;
      margin-bottom: 25px;
    }

    .profiles {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 50px;
      flex-wrap: wrap;
    }

    .profile {
      text-align: center;
      animation: fadeIn 2s ease-in-out;
    }

    .avatar {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      border: 3px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.15);
      object-fit: cover;
      margin-bottom: 10px;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

    .avatar:hover {
      transform: scale(1.1);
      box-shadow: 0 0 25px rgba(255, 255, 255, 0.4);
    }

    .profile span {
      display: block;
      font-weight: 500;
      font-size: 1.1rem;
    }
  </style>
</head>
<body>
  <div id="background"></div>
  <div id="overlay"></div>

  <div class="content">
    <h1>Lost Spirit Stats</h1>
    <p>Tracking the souls of the strongest...</p>

    <div class="profiles">
      <div class="profile">
        <img src="/images/botpfp.png" alt="IchiBot" class="avatar">
        <span>IchiBot#3137</span>
      </div>

      <div class="profile">
        <img src="/images/yumepfp.png" alt="1.yume" class="avatar">
        <span>1.yume</span>
      </div>
    </div>
  </div>

  <script>
    const images = [
      '/images/image1.png',
      '/images/image2.png',
      '/images/image3.png'
    ];

    let current = 0;
    const bg = document.getElementById('background');

    function changeBackground() {
      bg.style.opacity = 0;
      setTimeout(() => {
        bg.style.backgroundImage = `url('${images[current]}')`;
        bg.style.opacity = 1;
      }, 2000);
      current = (current + 1) % images.length;
    }

    bg.style.backgroundImage = `url('${images[0]}')`;
    setInterval(changeBackground, 30000);
  </script>
</body>
</html>
